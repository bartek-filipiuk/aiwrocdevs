---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { supabase } from '../lib/supabase';
import type { Page } from '../lib/supabase';

const { slug } = Astro.params;

// Fetch page from database
let page: Page | null = null;
let error: string | null = null;

try {
  const { data, error: fetchError } = await supabase
    .from('pages')
    .select('*')
    .eq('slug', slug)
    .eq('is_published', true)
    .single();

  if (fetchError) {
    error = fetchError.message;
  } else {
    page = data as Page;
  }
} catch (e) {
  error = 'Page not found';
  console.error('Error:', e);
}

// If page not found, return 404
if (!page) {
  return Astro.redirect('/404');
}
---

<Layout title={page.title} description={page.meta_description || undefined}>
  <Header />

  <main class="page-content">
    <div class="page-header">
      <div class="container">
        <h1>{page.title}</h1>
      </div>
    </div>

    <section class="section">
      <div class="container">
        <div class="content-wrapper">
          {page.sections.map((section) => (
            <div class="content-section card">
              <div class="section-content" set:html={section.content} />
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .page-content {
    min-height: 100vh;
    padding-top: 80px;
  }

  .page-header {
    background:
      linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%),
      var(--bg-secondary);
    border-bottom: 1px solid var(--border-color);
    padding: 5rem 0;
    text-align: center;
  }

  .page-header h1 {
    margin-bottom: 0;
  }

  .content-wrapper {
    max-width: 900px;
    margin: 0 auto;
  }

  .content-section {
    margin-bottom: 2rem;
  }

  /* Styles for rendered HTML content */
  .section-content {
    color: var(--text-secondary);
    line-height: 1.8;
  }

  .section-content :global(h1),
  .section-content :global(h2),
  .section-content :global(h3),
  .section-content :global(h4),
  .section-content :global(h5),
  .section-content :global(h6) {
    color: var(--text-primary);
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .section-content :global(h1) {
    font-size: 2.5rem;
  }

  .section-content :global(h2) {
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .section-content :global(h3) {
    font-size: 1.5rem;
  }

  .section-content :global(p) {
    margin-bottom: 1rem;
    font-size: 1.05rem;
  }

  .section-content :global(ul),
  .section-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .section-content :global(li) {
    margin-bottom: 0.75rem;
    font-size: 1.05rem;
    line-height: 1.8;
  }

  .section-content :global(ul li) {
    list-style: none;
    position: relative;
    padding-left: 0.5rem;
  }

  .section-content :global(ul li::before) {
    content: 'â†’';
    position: absolute;
    left: -1.5rem;
    color: var(--accent-primary);
    font-weight: bold;
  }

  .section-content :global(ol li) {
    list-style: decimal;
  }

  .section-content :global(strong) {
    font-weight: 700;
    color: var(--text-primary);
  }

  .section-content :global(em) {
    font-style: italic;
  }

  .section-content :global(a) {
    color: var(--accent-primary);
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .section-content :global(a:hover) {
    color: var(--accent-secondary);
  }

  .section-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  .section-content :global(blockquote) {
    border-left: 4px solid var(--accent-primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--text-secondary);
  }

  .section-content :global(code) {
    background-color: var(--bg-tertiary);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
  }

  .section-content :global(pre) {
    background-color: var(--bg-tertiary);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .section-content :global(pre code) {
    background: none;
    padding: 0;
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 3rem 0;
    }

    .section-content :global(h1) {
      font-size: 2rem;
    }

    .section-content :global(h2) {
      font-size: 1.75rem;
    }
  }
</style>
